.logo {
    height: calc(50px - 8px);
    margin: 1.5em;
    will-change: filter;
    transition: filter 300ms;

    &:hover {
        filter: drop-shadow(0 0 2em red);
    }

    .vanilla:hover {
        filter: drop-shadow(0 0 2em #f7df1eaa);
    }
}


.card {
    padding: 2em;
}

.text {
    color: #535bf2;
}